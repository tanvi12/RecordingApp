<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/the_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:keepScreenOn="true">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_43sdp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginLeft="@dimen/_9sdp"

            android:layout_marginTop="@dimen/_10sdp"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/testheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_11sdp"


            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />


    </LinearLayout>


    <ImageView

        android:id="@+id/button_start"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:src="@mipmap/ic_launcher" />

    <ImageView

        android:id="@+id/audiobar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_start"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <com.example.hightlitingfeatuer.VisualizerView
        android:id="@+id/visualizer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/taptohighlit"
        android:layout_centerInParent="true"
        android:background="@android:color/darker_gray"
        app:numColumns="100"
        app:renderColor="@color/colorPrimary"
        app:renderRange="both"
        app:renderType="pixel" />

    <TextView
        android:id="@+id/taptohighlit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="Tap to Listen"

        android:textColor="@android:color/black" />
</RelativeLayout>


